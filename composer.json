{
    "name": "ufozone/php-sepa",
    "type": "library",
    "description": "PHP class to create German SEPA files (XML) for credit transfer and direct debit.",
    "keywords": ["banking", "sepa", "xml"],
    "homepage": "https://github.com/ufozone/php-sepa/",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "ufozone",
            "homepage": "https://ufozone.de/"
        }
    ],
    "support": {
        "issues": "https://github.com/ufozone/php-sepa/issues"
    },
    "autoload": {
        "psr-4": {
            "ufozone\\phpsepa\\": "src/lib/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0|^12.3",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "phpstan": "bin/phpstan analyse",
        "phpstan-cc": "bin/phpstan clear-result-cache",
        "phpstan-dp": "bin/phpstan dump-parameters",
        "phpunit": "bin/phpunit"
    },
    "scripts-descriptions": {
        "phpstan": "runs `bin/phpstan analyse`",
        "phpstan-cc": "runs `bin/phpstan clear-result-cache`",
        "phpstan-dp": "runs `bin/phpstan dump-parameters`",
        "phpunit" : "It's pretty obvious what this does, isn't it?"
    }
}
